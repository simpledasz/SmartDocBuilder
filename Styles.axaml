<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- The default theme can be set here -->
                <ResourceInclude Source="avares://SmartDocBuilderGUI/Themes/LightTheme.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!-- General Styles -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}"/>
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
    </Style>

    <!-- Accent Button Style -->
    <Style Selector="Button.accentButton">
        <Setter Property="Background" Value="{DynamicResource AccentColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- Success Button Style -->
    <Style Selector="Button.successButton">
        <Setter Property="Background" Value="{DynamicResource SuccessColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- Secondary Button Style -->
    <Style Selector="Button.secondaryButton">
        <Setter Property="Background" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- ComboBox Style -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="#4A4A5C" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="#6A6A7C" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10,5" />
    </Style>

    <Style Selector="ComboBox:pointerover /template/ Border">
        <Setter Property="Background" Value="#5A5A6C" />
    </Style>

    <Style Selector="ComboBoxItem">
        <Setter Property="Background" Value="#4A4A5C" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="10,5" />
    </Style>

    <Style Selector="ComboBoxItem:pointerover">
        <Setter Property="Background" Value="#5A5A6C" />
    </Style>

    <Style Selector="ComboBoxItem:selected">
        <Setter Property="Background" Value="{DynamicResource AccentColor}" />
        <Setter Property="Foreground" Value="White" />
    </Style>
</Styles>